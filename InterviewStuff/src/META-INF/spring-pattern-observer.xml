<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="TVDisplay" class="com.sanjeeb.pattern.observer.TVDisplay" />
	<bean id="stockUpdate" class="com.sanjeeb.pattern.observer.StockUpdate">
		<property name="observers">
			<array>
				<bean id="mobileDisplay" class="com.sanjeeb.pattern.observer.MobileDisplay" />
				<bean id="tabletDisplay" class="com.sanjeeb.pattern.observer.TabletDisplay" />
				<ref bean="TVDisplay"/>
			</array>
		</property>
	</bean>	
</beans>